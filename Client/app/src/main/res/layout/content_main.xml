<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:clickable="true"
    android:weightSum="1"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:background="@color/accent_material_dark">

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="dstAddress"
        android:enabled="true"
        android:layout_marginTop="20dp"
        android:editable="true" />

    <Button
        android:id="@+id/connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect..."/>

    <TextView
        android:id="@+id/response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="New Text"
            android:id="@+id/textView"
            android:layout_gravity="right|top"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="New Text"
            android:id="@+id/textView3"
            android:layout_gravity="right|bottom"
            android:visibility="gone" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:layout_gravity="left|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="New Text"
                android:id="@+id/textView5"
                android:visibility="gone" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Speak"
                android:id="@+id/speak" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Map"
                android:id="@+id/seeTrace" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trace"
                android:id="@+id/brush" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/info"
            android:layout_gravity="center_horizontal|top"
            android:visibility="gone" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|top">

            <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView4"
                android:visibility="gone" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:text="Fling"
                android:id="@+id/flingButton"
                android:layout_gravity="right" />

            <Button
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:text="gravityButton"
                android:id="@+id/gravity"
                android:layout_gravity="right|bottom" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:weightSum="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bluetooth"
                android:id="@+id/refresh"
                android:layout_gravity="center_horizontal|top"
                android:layout_weight="3.56" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Face"
                android:id="@+id/face" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/BluetoothList"
                android:weightSum="1"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/traceButton"
                android:layout_alignStart="@+id/traceButton"
                android:layout_alignBottom="@+id/surfaceView"
                android:layout_gravity="center" >

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:visibility="gone">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:weightSum="1">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.18"></FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:weightSum="1">


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_weight="0.71">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_weight="0.09"></FrameLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="386dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="330dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="125dp"
                    android:layout_height="71dp"
                    android:id="@+id/buttonFront"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/btn_up"
                    android:clickable="true"
                    android:onClick="@string/abc_action_bar_home_description"
                    android:layout_marginLeft="-36dp" />

                <ImageButton
                    android:layout_width="94dp"
                    android:layout_height="110dp"
                    android:id="@+id/buttonRightFront"
                    android:background="@drawable/btn_rf"
                    android:layout_marginLeft="164dp"
                    android:layout_marginTop="-49dp"
                    android:layout_marginRight="0dp" />

                <ImageButton
                    android:layout_width="95dp"
                    android:layout_height="109dp"
                    android:id="@+id/buttonLeftFront"
                    android:background="@drawable/btn_lf"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="-113dp" />

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/buttonStop"
                    android:background="@drawable/stp"
                    android:layout_marginTop="-52dp"
                    android:layout_marginLeft="79dp" />

                <ImageButton
                    android:layout_width="94dp"
                    android:layout_height="100dp"
                    android:id="@+id/buttonRightBack"
                    android:background="@drawable/btn_rb"
                    android:layout_marginTop="-45dp"
                    android:layout_marginLeft="164dp" />

                <ImageButton
                    android:layout_width="125dp"
                    android:layout_height="65dp"
                    android:id="@+id/buttonBack"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/btn_ba"
                    android:layout_marginTop="-48dp"
                    android:layout_marginLeft="-36dp" />

                <ImageButton
                    android:layout_width="94dp"
                    android:layout_height="100dp"
                    android:id="@+id/buttonLeftBack"
                    android:background="@drawable/btn_lb"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="-118dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="320dp"
                android:layout_height="180dp"
                android:id="@+id/imageView"
                android:background="@color/button_material_dark" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </FrameLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:id="@+id/scrollView"
        android:fillViewport="false"
        android:layout_gravity="right"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="1"
        android:visibility="gone">

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Video"
            android:id="@+id/video" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="31dp"
            android:text="New Text"
            android:id="@+id/result" />

    </LinearLayout>


</LinearLayout>